<%- include("../partials/navbar") %>

<!-- Hero Section -->
<div class="relative h-[500px] bg-cover bg-center" style="background-image: url('/images/hero-banner.jpg');">
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
    <div class="absolute inset-0 flex items-center justify-center text-white">
        <div class="text-center">
            <h1 class="text-5xl font-bold mb-4">Welcome to Royal Monarch</h1>
            <p class="text-xl mb-8">Discover our exclusive collection of luxury watches</p>
            <a href="/shop" class="bg-white text-black px-8 py-3 rounded-md hover:bg-gray-100 transition-colors">
                Shop Now
            </a>
        </div>
    </div>
</div>

<!-- Categories Section -->
<section class="py-16 px-8">
    <h2 class="text-3xl font-bold text-center mb-12">Shop by Category</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% categories.forEach(category => { %>
            <a href="/shop?category=<%= category._id %>" class="group relative overflow-hidden rounded-lg shadow-lg">
                <div class="aspect-w-16 aspect-h-9">
                    <img 
                        src="<%= category.image || '/images/default-category.jpg' %>" 
                        alt="<%= category.name %>"
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    >
                </div>
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                    <h3 class="text-white text-2xl font-bold"><%= category.name %></h3>
                </div>
            </a>
        <% }); %>
    </div>
</section>

<!-- Featured Products Section -->
<section class="py-16 px-8 bg-gray-50">
    <h2 class="text-3xl font-bold text-center mb-12">Featured Products</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <% featuredProducts.forEach(product => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden group">
                <div class="aspect-w-1 aspect-h-1 overflow-hidden">
                    <img 
                        src="<%= product.images[0].path %>" 
                        alt="<%= product.name %>"
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    >
                </div>
                <div class="p-4">
                    <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
                    <p class="text-gray-600 mb-2"><%= product.brand %></p>
                    <div class="flex justify-between items-center mb-3">
                        <div>
                            <span class="text-xl font-bold">₹<%= product.variants[0].price %></span>
                            <% if (product.discount > 0) { %>
                                <span class="text-sm text-red-500 ml-2">-<%= product.discount %>%</span>
                            <% } %>
                        </div>
                        <a href="/product/view/<%= product._id %>" class="text-black hover:text-gray-700">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                    <div class="flex flex-col gap-2">
                        <select class="variant-select w-full p-2 text-sm border rounded" data-product-id="<%= product._id %>">
                            <% product.variants.forEach(variant => { %>
                                <option value="<%= variant.type %>" data-stock="<%= variant.stock %>"><%= variant.type %> (<%= variant.stock %> left)</option>
                            <% }) %>
                        </select>
                        <button 
                            class="add-to-cart-btn w-full bg-black text-white py-2 text-sm rounded hover:bg-gray-800 transition-colors" 
                            data-product-id="<%= product._id %>">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<!-- New Arrivals Section -->
<section class="py-16 px-8">
    <h2 class="text-3xl font-bold text-center mb-12">New Arrivals</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <% newArrivals.forEach(product => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden group">
                <div class="aspect-w-1 aspect-h-1 overflow-hidden">
                    <img 
                        src="<%= product.images[0].path %>" 
                        alt="<%= product.name %>"
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    >
                </div>
                <div class="p-4">
                    <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
                    <p class="text-gray-600 mb-2"><%= product.brand %></p>
                    <div class="flex justify-between items-center mb-3">
                        <div>
                            <span class="text-xl font-bold">₹<%= product.variants[0].price %></span>
                            <% if (product.discount > 0) { %>
                                <span class="text-sm text-red-500 ml-2">-<%= product.discount %>%</span>
                            <% } %>
                        </div>
                        <a href="/product/view/<%= product._id %>" class="text-black hover:text-gray-700">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                    <div class="flex flex-col gap-2">
                        <select class="variant-select w-full p-2 text-sm border rounded" data-product-id="<%= product._id %>">
                            <% product.variants.forEach(variant => { %>
                                <option value="<%= variant.type %>" data-stock="<%= variant.stock %>"><%= variant.type %> (<%= variant.stock %> left)</option>
                            <% }) %>
                        </select>
                        <button 
                            class="add-to-cart-btn w-full bg-black text-white py-2 text-sm rounded hover:bg-gray-800 transition-colors" 
                            data-product-id="<%= product._id %>">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<%- include("../partials/footer") %>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add event listeners to all "Add to Cart" buttons
    document.querySelectorAll('.add-to-cart-btn').forEach(button => {
        button.addEventListener('click', async function() {
            const productId = this.getAttribute('data-product-id');
            const variantSelect = document.querySelector(`.variant-select[data-product-id="${productId}"]`);
            const variantType = variantSelect.value;
            const stock = variantSelect.options[variantSelect.selectedIndex].getAttribute('data-stock');
            
            // Check if product is in stock
            if (parseInt(stock) <= 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Out of Stock',
                    text: 'This variant is currently out of stock'
                });
                return;
            }
            
            try {
                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId,
                        variantType
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Trigger cart updated event
                    document.dispatchEvent(new CustomEvent('cartUpdated'));
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Added to Cart!',
                        text: `${variantType} added to cart successfully`,
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error.message || 'Failed to add to cart'
                });
            }
        });
    });
});
</script>
