<script>
document.addEventListener('DOMContentLoaded', function() {
    // Shared interval for all carousels
    let sharedInterval;
    let carouselInstances = [];
    
    // Function to handle image loading errors
    function handleImageErrors() {
        // Handle product images
        document.querySelectorAll('.product-image').forEach(img => {
            // Remove any existing error handlers
            img.onerror = null;
            
            // Add new error handler
            img.addEventListener('error', function() {
                const fallback = this.getAttribute('data-fallback');
                if (fallback && this.src !== fallback) {
                    this.src = fallback;
                }
            }, { once: true });
        });
        
        // Handle category images
        document.querySelectorAll('.category-image').forEach(img => {
            // Remove any existing error handlers
            img.onerror = null;
            
            // Add new error handler
            img.addEventListener('error', function() {
                const fallback = this.getAttribute('data-fallback');
                if (fallback && this.src !== fallback) {
                    this.src = fallback;
                }
            }, { once: true });
        });
        
        // Handle handpicked product images
        document.querySelectorAll('.handpicked-image').forEach(img => {
            // Remove any existing error handlers
            img.onerror = null;
            
            // Add new error handler
            img.addEventListener('error', function() {
                const fallback = this.getAttribute('data-fallback');
                if (fallback && this.src !== fallback) {
                    this.src = fallback;
                }
            }, { once: true });
        });
        
        // Handle hero section background
        const heroSection = document.getElementById('heroSection');
        if (heroSection) {
            // Create a test image to check if the hero image exists
            const testImg = new Image();
            const heroImageUrl = window.getComputedStyle(heroSection).backgroundImage.replace(/url\(['"](.+)['"]\)/, '$1');
            
            // Remove any existing error handlers
            testImg.onerror = null;
            
            // Add new error handler
            testImg.addEventListener('error', function() {
                heroSection.style.backgroundImage = 'url("/images/placeholder.jpg")';
            }, { once: true });
            
            testImg.src = heroImageUrl;
        }
    }
    
    // Call the function to handle image errors
    handleImageErrors();

    // Initialize handpicked product carousels
    function initHandpickedCarousels() {
        // Get all handpicked product IDs and positions
        const handpickedProducts = Array.from(document.querySelectorAll('.handpicked-carousel'))
            .map(carousel => ({
                id: carousel.getAttribute('data-product-id'),
                position: carousel.getAttribute('data-position')
            }))
            .filter(product => product.id);
        
        if (handpickedProducts.length === 0) return;
        
        // Fetch product images for all handpicked products
        fetch('/api/products/images', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productIds: handpickedProducts.map(p => p.id) })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Initialize carousels with the fetched images
                data.products.forEach(product => {
                    const positions = handpickedProducts
                        .filter(p => p.id === product._id)
                        .map(p => p.position);
                    
                    positions.forEach(position => {
                        initCarousel(product._id, product.images, position);
                    });
                });
                
                // Start the shared interval after all carousels are initialized
                startSharedInterval();
            }
        })
        .catch(error => {
            console.error('Error fetching product images:', error);
        });
    }
    
    function startSharedInterval() {
        if (sharedInterval) clearInterval(sharedInterval);
        
        sharedInterval = setInterval(() => {
            carouselInstances.forEach(instance => {
                if (!instance.isHovered && !instance.isUserInteracted) {
                    const nextIndex = (instance.currentIndex + 1) % instance.totalImages;
                    instance.showImage(nextIndex);
                }
            });
        }, 4000);
    }
    
    function initCarousel(productId, images, position) {
        const carouselContainer = document.querySelector(`.handpicked-carousel[data-product-id="${productId}"][data-position="${position}"]`);
        const dotsContainer = document.querySelector(`.carousel-dots[data-product-id="${productId}"][data-position="${position}"]`);
        
        if (!carouselContainer || !dotsContainer || !images || images.length <= 1) return;
        
        // Clear the container
        carouselContainer.innerHTML = '';
        
        // Preload images
        const preloadedImages = [];
        let loadedCount = 0;
        
        // Create loading indicator
        const loadingIndicator = document.createElement('div');
        loadingIndicator.classList.add('absolute', 'inset-0', 'flex', 'items-center', 'justify-center', 'bg-black', 'bg-opacity-30', 'z-10');
        loadingIndicator.innerHTML = `
            <div class="flex flex-col items-center">
                <div class="w-12 h-12 border-4 border-white border-t-transparent rounded-full animate-spin mb-2"></div>
                <span class="text-white text-sm font-serif">Loading luxury images...</span>
            </div>
        `;
        carouselContainer.appendChild(loadingIndicator);
        
        // Preload all images
        images.forEach((image, index) => {
            const img = new Image();
            img.onload = function() {
                loadedCount++;
                if (loadedCount === images.length) {
                    loadingIndicator.remove();
                    initializeCarousel();
                }
            };
            img.onerror = function() {
                img.src = '/images/placeholder.jpg';
            };
            img.src = image.path;
            preloadedImages.push(img);
        });
        
        function initializeCarousel() {
            // Add all images to the carousel
            preloadedImages.forEach((img, index) => {
                const imgElement = document.createElement('img');
                imgElement.src = img.src;
                imgElement.alt = `Product image ${index + 1}`;
                imgElement.classList.add('w-full', 'h-full', 'object-cover', 'carousel-image', 'absolute', 'inset-0');
                if (index === 0) imgElement.classList.add('opacity-100');
                else imgElement.classList.add('opacity-0');
                carouselContainer.appendChild(imgElement);
                
                // Create dot
                const dot = document.createElement('div');
                dot.classList.add('carousel-dot');
                if (index === 0) dot.classList.add('active');
                dot.setAttribute('data-index', index);
                dotsContainer.appendChild(dot);
            });
            
            // Create carousel instance
            const carouselInstance = {
                currentIndex: 0,
                totalImages: images.length,
                isHovered: false,
                isUserInteracted: false,
                showImage: function(index) {
                    // Update images
                    carouselContainer.querySelectorAll('.carousel-image').forEach((img, i) => {
                        if (i === index) {
                            img.classList.remove('opacity-0');
                            img.classList.add('opacity-100');
                        } else {
                            img.classList.remove('opacity-100');
                            img.classList.add('opacity-0');
                        }
                    });
                    
                    // Update dots
                    dotsContainer.querySelectorAll('.carousel-dot').forEach((dot, i) => {
                        if (i === index) {
                            dot.classList.add('active');
                        } else {
                            dot.classList.remove('active');
                        }
                    });
                    
                    this.currentIndex = index;
                }
            };
            
            // Add to carousel instances
            carouselInstances.push(carouselInstance);
            
            // Add click event to dots
            dotsContainer.querySelectorAll('.carousel-dot').forEach(dot => {
                dot.addEventListener('click', function() {
                    const index = parseInt(this.getAttribute('data-index'));
                    carouselInstance.showImage(index);
                    carouselInstance.isUserInteracted = true;
                    
                    // Reset user interaction after 8 seconds
                    setTimeout(() => {
                        carouselInstance.isUserInteracted = false;
                    }, 8000);
                });
            });
            
            // Add hover events
            carouselContainer.addEventListener('mouseenter', function() {
                carouselInstance.isHovered = true;
            });
            
            carouselContainer.addEventListener('mouseleave', function() {
                carouselInstance.isHovered = false;
            });
        }
    }
    
    // Initialize carousels
    initHandpickedCarousels();

    // Add event listeners to all "Add to Cart" buttons
    document.querySelectorAll('.add-to-cart-btn').forEach(button => {
        button.addEventListener('click', async function() {
            const productId = this.getAttribute('data-product-id');
            const variantSelect = document.querySelector(`.variant-select[data-product-id="${productId}"]`);
            const variantType = variantSelect.value;
            const stock = variantSelect.options[variantSelect.selectedIndex].getAttribute('data-stock');
            
            // Check if product is in stock
            if (parseInt(stock) <= 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Out of Stock',
                    text: 'This variant is currently out of stock'
                });
                return;
            }
            
            try {
                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId,
                        variantType
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Trigger cart updated event
                    document.dispatchEvent(new CustomEvent('cartUpdated'));
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Added to Cart!',
                        text: `${variantType} added to cart successfully`,
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error.message || 'Failed to add to cart'
                });
            }
        });
    });

    // Add wishlist toggle functionality
    document.querySelectorAll('.wishlist-toggle').forEach(button => {
        button.addEventListener('click', async function(e) {
            e.preventDefault();
            e.stopPropagation(); // Prevent event bubbling
            
            const productId = this.getAttribute('data-product-id');
            const variantSelect = document.querySelector(`.variant-select[data-product-id="${productId}"]`);
            const variantType = this.getAttribute('data-variant-type');
            const currentState = this.getAttribute('data-in-wishlist') === 'true';
            
            try {
                const response = await fetch(`/wishlist/toggle/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        productId,
                        variantType
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Immediately update the UI
                    const icon = this.querySelector('i');
                    const newState = !currentState;
                    
                    if (newState) {
                        icon.classList.remove('far');
                        icon.classList.add('fas', 'text-red-500');
                    } else {
                        icon.classList.remove('fas', 'text-red-500');
                        icon.classList.add('far');
                    }
                    
                    // Update button data attribute
                    this.setAttribute('data-in-wishlist', newState.toString());
                    
                    // Update variant select option
                    const option = variantSelect.options[variantSelect.selectedIndex];
                    option.setAttribute('data-in-wishlist', newState.toString());
                    
                    // Update all variant options for this product
                    Array.from(variantSelect.options).forEach(opt => {
                        if (opt.value === variantType) {
                            opt.setAttribute('data-in-wishlist', newState.toString());
                        }
                    });
                    
                    // Show success message
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true
                    });

                    Toast.fire({
                        icon: 'success',
                        title: data.message
                    });
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                // Revert the UI state on error
                const icon = this.querySelector('i');
                if (currentState) {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'text-red-500');
                } else {
                    icon.classList.remove('fas', 'text-red-500');
                    icon.classList.add('far');
                }
                this.setAttribute('data-in-wishlist', currentState.toString());
                
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error.message || 'Failed to update wishlist',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            }
        });
    });

    // Update variant select to handle wishlist status
    document.querySelectorAll('.variant-select').forEach(select => {
        select.addEventListener('change', function() {
            const productId = this.getAttribute('data-product-id');
            const variantType = this.value;
            const wishlistBtn = document.querySelector(`.wishlist-toggle[data-product-id="${productId}"]`);
            
            // Update wishlist button data attributes
            wishlistBtn.setAttribute('data-variant-type', variantType);
            
            // Check if this variant is in wishlist
            const option = this.options[this.selectedIndex];
            const inWishlist = option.getAttribute('data-in-wishlist') === 'true';
            
            // Update wishlist button appearance
            const icon = wishlistBtn.querySelector('i');
            if (inWishlist) {
                icon.classList.remove('far');
                icon.classList.add('fas', 'text-red-500');
                wishlistBtn.setAttribute('data-in-wishlist', 'true');
            } else {
                icon.classList.remove('fas', 'text-red-500');
                icon.classList.add('far');
                wishlistBtn.setAttribute('data-in-wishlist', 'false');
            }
        });
    });
});

function redirectToShop(categoryId) {
    if (categoryId) {
        window.location.href = `/shop?category=${categoryId}`;
    }
}
