<%- include("../partials/navbar") %>

<div class="justify-center items-center h-screen flex">
    <div class="rounded-lg shadow-lg w-80 border-2 p-8">
        <p class="text-center text-gray-700 mb-4">Login</p>
        <form class="space-y-4"action="/login" method="post" >
            <input type="email" placeholder="Email" class="border-gray-300 rounded w-full px-4 py-2 bg-gray-200" required/>
            <input type="password" placeholder="Password" class="border-gray-300 rounded w-full px-4 py-2 bg-gray-200" required/>
            <div class="justify-between text-sm text-gray-700 flex">
                <a href="/signup">Signup</a>
                <a href="#" class="ml-auto">Forget Password?</a>
            </div>
            <button type="submit" class="rounded w-full py-2 mt-2 bg-black text-white">Login</button>
        </form>
        <p class="text-center text-gray-700 mt-4">Or continue with</p>
        <div class="justify-center mt-2 flex">
            <img alt="Google logo" src="https://placehold.co/20x20"/>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>

<script>
    document.querySelector('form').addEventListener('submit', async (event) => {
        event.preventDefault();
        const form = event.target;
        const email = form.querySelector('input[type="email"]').value;
        const password = form.querySelector('input[type="password"]').value;

        try {
            const response = await axios.post('/login', { email, password });
            
            if (response.data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Login successful',
                    timer: 1500,
                    showConfirmButton: false
                }).then(() => {
                    window.location.href = response.data.redirect;
                });
            }
        } catch (error) {
            const message = error.response?.data?.message || 'An error occurred';
            const redirect = error.response?.data?.redirect;

            if (redirect) {
                Swal.fire({
                    icon: 'info',
                    title: 'Verification Required',
                    text: message,
                    confirmButtonText: 'Verify Now'
                }).then(() => {
                    window.location.href = redirect;
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: message
                });
            }
        }
    });
</script>
